---
interface Props {
  label: string;
  currentLang: 'en' | 'pt';
}

const { label, currentLang } = Astro.props;
---

<div class="language-selector mb-10 flex gap-5 items-center flex-wrap">
  <span class="text-termbrightaqua font-bold">{label}</span>
  <a 
    href="/en"
    class={`lang-button border border-termgray text-termbrightblue px-5 py-2 transition-all duration-300 hover:bg-termbg2 hover:text-termbrightyellow hover:border-termbrightyellow rounded no-underline ${
      currentLang === 'en' ? 'active' : ''
    }`}
    aria-label="Switch to English"
  >
    EN
  </a>
  <a 
    href="/pt"
    class={`lang-button border border-termgray text-termbrightblue px-5 py-2 transition-all duration-300 hover:bg-termbg2 hover:text-termbrightyellow hover:border-termbrightyellow rounded no-underline ${
      currentLang === 'pt' ? 'active' : ''
    }`}
    aria-label="Mudar para PortuguÃªs"
  >
    PT-BR
  </a>
</div>

<style>
  @reference "../styles/global.css";
  .lang-button.active {
    @apply bg-termbg2 text-termbrightgreen border-termbrightgreen;
  }
</style>
